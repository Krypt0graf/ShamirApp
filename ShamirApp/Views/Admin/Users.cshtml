<div class="modal fade" id="usermodal">
    <div class="modal-dialog m-2 mx-auto" style="max-width: 1000px;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalTitle">Новый пользователь</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">✕</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="input-login" class="form-label">Логин</label>
                    <input type="text" class="form-control" id="input-login" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="input-password" class="form-label">Пароль</label>
                    <input type="text" class="form-control" id="input-password" aria-describedby="emailHelp">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="modal-button-ok" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
