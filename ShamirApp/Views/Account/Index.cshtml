@using ShamirApp.Models.Admin;
@{
    Layout = "_Account";
}
@model List<(int id, string title)>;

<div class="p-1" style="max-width: 1000px; margin: 0 auto;">
    <div class="mt-2 mb-2" style="display: flex; justify-content: space-between;">
        <h3 class="ml-1">Доступные для голосования анкеты</h3>
    </div>
    <div class="row m-0">
        @foreach(var form in Model)
        {
            <div class="col-xl-4 col-lg-4 col-md-6 p-1">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">
                            @form.title
                        </p>
                        <form action="Account/Form">
                            <input type="hidden" name="id" value="@form.id" />
                            <button type="submit" class="btn btn-success">&#9998; Пройти опрос</button>
                        </form>
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>
